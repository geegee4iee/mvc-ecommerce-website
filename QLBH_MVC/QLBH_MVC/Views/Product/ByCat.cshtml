@using QLBH_MVC.Models

@model List<product>

@if (Model.Count == 0)
{
    <text>Không có sản phẩm</text>
}

<div style="min-height:100%;padding-bottom:200px" class="bg-grayLighter">


    <div class="grid condensed" style="margin-top: 3.125rem; margin-bottom: 20px;margin-right:20px">
        <div class="row cells4" style="margin-top:20px">
            <div class="cell">
                <div class="row" style="padding-right:20px">
                    <div class="tile-container bg-darkCyan">
                        <div class="tile-small bg-orange fg-white" data-role="tile">
                            <div class="tile-content slide-down">
                                <div class="slide">
                                    <img src="~/images/home/7.jpg" data-role="fitImage" data-format="square">
                                </div>
                                <div class="slide-over op-cyan text-small padding10">
                                    Chi tiết
                                </div>
                            </div>
                        </div>
                        <p class="sub-header fg-white" style="margin-left:100px">@ViewBag.CatName</p>
                    </div>
                    <ul class="sidebar2" style="max-width:none">
                        <li class="stick bg-green">
                            <a class="dropdown-toggle" href="#">Loại sản phẩm</a>
                            <ul class="d-menu" style="max-width:none" data-role="dropdown">
                                @Html.Action("PartialList", "Category")
                            </ul>
                        </li>
                        <li class="stick bg-green">
                            <a class="dropdown-toggle" href="#">Nhà sản xuất</a>
                            <ul class="d-menu" style="max-width:none" data-role="dropdown">
                                @Html.Action("PartialList", "Manufacturer")
                            </ul>
                        </li>
                    </ul>
                </div>




            </div>
            <div class="cell colspan3">
                <div class="tile-container">
                    @foreach (product c in Model)
                    {
                        <div class="tile-large fg-white" data-role="tile" style="margin-right:50px;margin-bottom:50px">
                            <div class="tile-content slide-down-2">
                                <div class="slide">
                                    <img src="~/images/product/@(c.ProId)/img.jpg" data-role="fitImage" data-format="fill">
                                    <span class="tile-badge bg-darkRed">@c.NewPrice đ</span>
                                </div>
                                <div class="slide-over bg-darkCyan text-small padding10">
                                    <a class="button fg-gray add-cart" data-id="@c.ProId"><span class="mif-cart fg-cyan"></span>&nbsp;Đặt hàng</a>
                                    <ul class="simple-list">
                                        <li class="fg-white">
                                            Thuộc loại @c.category.CatName
                                        </li>
                                        <li class="fg-white">
                                            Do @c.manufacturer.MaName sản xuất
                                        </li>
                                        <li class="fg-white">
                                            Hiện còn <span class="fg-lightTeal">@c.Quantity</span> cái
                                        </li>
                                        <li class="fg-white">
                                            @c.ShortDes
                                        </li>
                                    </ul>

                                    <a class="fg-white" href="@Url.Action("Detail", "Product", new { id=@c.ProId })"><div class="tile-label header">@c.ProName</div></a>

                                </div>

                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <a href="@Url.Action("ByCat", "Product", new { id=ViewBag.CatId,page=ViewBag.CurPage-1 })" class="button @(ViewBag.CurPage == 1 ? "disabled" : "")"><</a>
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        <a href="@Url.Action("ByCat", "Product", new { id = ViewBag.CatId, page = i })" class="button @(ViewBag.CurPage == i ? "disabled" : "")">@i</a>
                    }
                    <a href="@Url.Action("ByCat", "Product", new { id=ViewBag.CatId,page=ViewBag.CurPage+1 })" class="button @(ViewBag.CurPage == ViewBag.PageCount ? "disabled" : "")">></a>

                </div>


            </div>



        </div>

    </div>


    <div style="width:100%;position:absolute;bottom:0;left:0">

        <div>
            <div class="presenter" data-role="presenter" data-height="100" data-easing="easeInExpo">
                <div class="scene">
                    <div class="act ribbed-darkEmerald fg-white">
                        <h1 class="actor" data-position="10,10">Thông tin website</h1>
                        <p class="actor" data-position="70,10">Được thực hiện bởi Huỳnh Chánh Kiệt</p>
                        <p class="actor" data-position="95,10">Sử dụng bộ CSS <a class="fg-yellow" href="http://metroui.org.ua/">Metro</a></p>

                        <img src="~/images/home/5.jpg" class="actor" data-position="10,500" style="height: 130px">
                        <img src="~/images/home/6.jpg" class="actor" data-position="50,800" style="height: 100px">
                        <img src="~/images/home/7.jpg" class="actor" data-position="30,990" style="height: 80px">
                    </div>
                    <div class="act ribbed-grayDark fg-white">
                        <h1 class="actor" data-position="10,10">Liên hệ cửa hàng</h1>
                        <p class="actor" data-position="70,10">Phone <span class="fg-amber">+1900-1560</span></p>
                        <p class="actor" data-position="95,10">Địa chỉ: 18/5 Phường 12, đường Võ Thị Sáu</p>
                        <img src="~/images/home/8.jpg" class="actor" data-position="10,500" style="height: 130px">
                        <img src="~/images/home/9.jpg" class="actor" data-position="50,750" style="height: 100px">
                        <img src="~/images/home/10.jpg" class="actor" data-position="30,950" style="height: 80px">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>